			"value": "[concat('https://', reference(parameters('kubernetesMasterPublicIpDnsLabel')).dnsSettings.fqdn, ':8443/console')]"
		},
		"Bastion DNS FQDN": {
			"type": "string",
			"value": "[reference(variables('bastionPublicIp')).dnsSettings.fqdn]"
		},
		"Kubernetes Master SSH": {
			"type": "string",
			"value": "[concat('ssh ', parameters('adminUsername'), '@', reference(parameters('kubernetesMasterPublicIpDnsLabel')).dnsSettings.fqdn, ' -p 2200')]"
		},
		"Node OS Storage Account Name": {
			"type": "string",
			"value": "[variables('newStorageAccountNodeOs')]"
		},
		"Node Data Storage Account Name": {
			"type": "string",
			"value": "[variables('newStorageAccountNodeData')]"
		}
	}
}
